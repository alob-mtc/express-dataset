{
  "name": "node-js-express",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prestart": "npm install",
    "start": "node ./bin/www",
    "build": "rm -rf dist && yarn build-ts && yarn migrate",
    "serve": "node dist/Program.js",
    "start:prod": "yarn write:file && yarn build && yarn start",
    "start:dev": "yarn rm-db:config && yarn write:file && yarn build && yarn watch",
    "rm-db:config": "rm -rf server/sequelize.json",
    "migrate": "sequelize db:migrate",
    "unmigrate": "sequelize db:migrate:undo:all",
    "unmigrate-last": "sequelize db:migrate:undo",
    "seed": "yarn seed-undo && sequelize db:seed:all",
    "seed-undo": "sequelize db:seed:undo:all",
    "watch-node": "nodemon dist/Program.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node-Express\" -c \"blue.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "watch-test": "yarn test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "write:file": "ts-node server/scripts/write-sequelize-config.ts",
    "scaffold": "npx sequelize-cli model:generate --name",
    "pretest": "npm install",
    "test": "./node_modules/.bin/mocha test"
  },
  "dependencies": {
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^3.0.0",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "date-fns": "^2.16.1",
    "debug": "~2.6.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.3.0",
    "jsonfile": "^3.0.1",
    "lodash": "^4.17.4",
    "mocha": "^3.5.0",
    "mocha-junit-reporter": "^1.13.0",
    "mocha-multi-reporters": "^1.1.4",
    "moment": "^2.24.0",
    "morgan": "^1.10.0",
    "pg": "^8.3.3",
    "sequelize": "^5.21.4",
    "sequelize-cli": "^5.5.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.9.2",
    "@types/nodemailer": "^6.4.0",
    "@types/sequelize": "^4.28.9",
    "concurrently": "^5.0.2",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.2",
    "prettier": "^2.2.1",
    "tslib": "^2.0.1"
  }
}
